import unittest
from lava.lib.optimization.utils.solver_benchmarker import SolverBenchmarker 

class TestSolverBenchmarker (unittest.TestCase):
    
        
    def setUp(self) -> None:
        self.benchmarker= SolverBenchmarker()

    def test_benchmarker_instance_is_created(self):
        self.assertIsInstance(self.benchmarker, SolverBenchmarker)

    def test_setup_benchmark_call(self):
        self.benchmarker.setup_benchmark()

    def test_setup_benchmark_create_power_logger(self):
        self.assertIsNone(self.benchmarker._power_logger)
        self.assertIsNone(self.benchmarker._time_logger)
        self.benchmarker.setup_benchmark(board)
        self.assertIsInstance(self.benchmarker._power_logger, Loihi2Power())
        self.assertIsInstance(self.benchmarker._time_logger, Loihi2Time())

    
    def test_setup_benchmark_attach_board(self):
        self.assertIsNone(self.benchmarker._power_logger)
        self.assertIsNone(self.benchmarker._time_logger)
        class Board:
            pass
        board=Board()
        self.benchmarker.setup_benchmark(board)
        self.assertIs(self.benchmarker._power_logger.board, board)
        self.assertIsInstance(self.benchmarker._time_logger, Loihi2Time)
        
